@model GarageDatabaseOstersund.Models.Owner

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Owner</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Vehicles)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Vehicles.Count)
        </dd>

    </dl>
    <ul>
        @if (Model != null)
        {
            foreach (var movie in Model.Vehicles)
            {
                <li>@movie.VehicleType.Type</li>
                <li>@movie.VehicleType.Fee.VehicleFee</li>
            }
        }
    </ul>
    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.SSN }) |
    @Html.ActionLink("Back to List", "Index")
</p>
